# PostgreSQL Configuration
# Generated by Ansible

# Connection settings
listen_addresses = '*'
port = 5432
max_connections = 100

# Memory settings
shared_buffers = 128MB
effective_cache_size = 512MB
maintenance_work_mem = 64MB
work_mem = 4MB

# WAL settings
wal_level = replica
max_wal_senders = 5
max_replication_slots = 5
wal_keep_size = 128MB

# Logging
logging_collector = on
log_directory = 'log'
log_filename = 'postgresql-%Y-%m-%d_%H%M%S.log'
log_rotation_age = 1d
log_rotation_size = 100MB
log_line_prefix = '%t [%p]: [%l-1] user=%u,db=%d,app=%a,client=%h '

# Patroni managed settings (will be overridden by Patroni)
# These are set via Patroni's postgresql.parameters section

