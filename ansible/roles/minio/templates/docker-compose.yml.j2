services:
  minio:
    image: quay.io/minio/minio:latest
    container_name: minio
    restart: always
    environment:
      MINIO_ROOT_USER: "{{ minio_access_key }}"
      MINIO_ROOT_PASSWORD: "{{ minio_secret_key }}"
    command: server --console-address ":9001" {{ minio_cluster_nodes | join(" ") }}
    ports:
      - "9000:9000"
      - "9001:9001"
    volumes:
      - minio_data:/data
volumes:
  minio_data:
