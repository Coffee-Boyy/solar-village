[DEFAULT]
name=local-router
user=mysqlrouter
logging_folder=/var/log/mysqlrouter

[metadata_cache:gr]
cluster_type=gr
router_id=1
bootstrap_server={{ hostvars[groups['mysql_gr'][0]].wg_ip }}:3306
ttl=300

[routing:rw]
bind_address=127.0.0.1
bind_port=6446
routing_strategy=first-available
destinations=metadata-cache://gr/default?role=PRIMARY

[routing:ro]
bind_address=127.0.0.1
bind_port=6447
routing_strategy=round-robin
destinations=metadata-cache://gr/default?role=SECONDARY
